<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />

	<appender name="http"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>D:/Development_DoNotDelete/MarketScan/logs/market-scan-http.log
		</file>

		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>D:/Development_DoNotDelete/MarketScan/logs/market-scan-http_%d{dd-MMM-yyyy}.%i.log
			</fileNamePattern>
			<timeBasedFileNamingAndTriggeringPolicy	class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
				<maxFileSize>5MB</maxFileSize>
			</timeBasedFileNamingAndTriggeringPolicy>
			<maxHistory>30</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%n%fullRequest%n%fullResponse%n</pattern>
		</encoder>
	</appender>
	<appender-ref ref="http" />

</configuration>
